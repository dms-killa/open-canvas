{
  "name": "@opencanvas/web",
  "author": "Brace Sproul",
  "homepage": "https://opencanvas.langchain.com",
  "repository": "https://github.com/langchain-ai/open-canvas",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --config .prettierrc --write \"src\"",
    "format:check": "prettier --config .prettierrc --check \"src\"",
    "type-check": "tsc --noEmit",
    "eval": "vitest run --config ls.vitest.config.ts",
    "eval:highlights": "yarn tsx evals/highlights.ts",
    "test": "vitest run --config ls.vitest.config.ts"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-sql": "^6.9.1",
    "@codemirror/view": "^6.38.1",
    "@uiw/react-codemirror": "^4.25.1",
    "tailwindcss": "^4.1.12"
  }
}
