{
  "name": "@opencanvas/agents",
  "author": "Brace Sproul",
  "repository": "https://github.com/langchain-ai/open-canvas",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn langgraphjs dev --host 0.0.0.0 --port 54367 --config ../../langgraph.json --no-browser",
    "build": "yarn clean && tsc",
    "clean": "rm -rf ./dist .turbo || true",
    "format": "prettier --config .prettierrc --write \"src\" \"scripts\"",
    "format:check": "prettier --config .prettierrc --check \"src\" \"scripts\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "postinstall": "yarn turbo build"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.0.7",
    "@langchain/community": "^0.3.46",
    "@langchain/core": "^0.3.58",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/langgraph-sdk": "^0.0.28",
    "@langchain/openai": "^0.6.9",
    "@langfuse/langchain": "4.0.0-alpha.0",
    "@opencanvas/shared": "workspace:*",
    "date-fns": "^3.6.0",
    "exa-js": "^1.0.0",
    "langchain": "^0.3.0",
    "pdf-parse": "1.1.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@langchain/langgraph-cli": "^0.0.27",
    "@tsconfig/recommended": "^1.0.3",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "turbo": "latest",
    "typescript": "^5",
    "typescript-eslint": "^8.8.1",
    "vitest": "^3.0.4"
  }
}
