{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "target": "ES2021",
    "lib": [
      "ES2021",
      "ES2022.Object",
      "es2023"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["vitest", "node"],
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "useDefineForClassFields": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "strict": false,
    "isolatedModules": true,
    "paths": {
      "@opencanvas/shared": ["../../packages/shared/src/index.ts"],
      "@opencanvas/shared/*": ["../../packages/shared/src/*"],
      "@opencanvas/shared/constants": ["../../packages/shared/src/constants.ts"]
    }
  },
  "include": [
    "src/",
    "../../packages/shared/src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "dist"
  ]
}
